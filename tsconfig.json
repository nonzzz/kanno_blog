{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "/",
    "allowJs": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": ["vite/client", "@fect-ui/vue/components"],
    "lib": ["esnext", "dom", "dom.iterable"],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*.vue", "src/**/*.ts", "src/**/*.d.ts", "src/global.d.ts", "src/app/typings"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "lib": ["es2020"]
    }
  }
}
